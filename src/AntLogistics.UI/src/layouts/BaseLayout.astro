---
import "@/styles/globals.css";
import ApiStatus from "@/components/ApiStatus.tsx";
import AuthStatus from "@/components/AuthStatus.tsx";
import AuthGate from "@/components/AuthGate.tsx";

interface Props {
  title?: string;
  description?: string;
  requiresAuth?: boolean;
}

const { title = "Ant Logistics", description = "Modern logistics management powered by .NET Aspire and Astro", requiresAuth = true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpeg" sizes="32x32" href="/favicon.jpg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-gray-900 text-gray-100">
    <nav class="bg-gradient-to-r from-purple-600 to-purple-800 shadow-lg">
      <div class="container mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
          <div class="flex items-center">
            <img src="/images/logo.png" alt="" aria-hidden="true" class="w-8 h-8 rounded mr-3" />
            <h1 class="text-2xl font-bold text-white">Ant Logistics</h1>
          </div>
          <div class="flex items-center gap-8">
            <ul class="flex gap-8">
              <li>
                <a
                  href="/"
                  class="text-white font-medium hover:opacity-80 transition-opacity"
                >
                  Home
                </a>
              </li>
              <li>
                <a
                  href="/warehouses"
                  class="text-white font-medium hover:opacity-80 transition-opacity"
                >
                  Warehouses
                </a>
              </li>
              <li>
                <a
                  href="/commodities"
                  class="text-white font-medium hover:opacity-80 transition-opacity"
                >
                  Commodities
                </a>
              </li>
              <li>
                <a
                  href="/stocks"
                  class="text-white font-medium hover:opacity-80 transition-opacity"
                >
                  Stocks
                </a>
              </li>
            </ul>
            <div class="ml-4 flex items-center gap-3">
              <ApiStatus client:load />
              <AuthStatus client:load />
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="flex-1 container mx-auto px-6 py-8">
      {requiresAuth ? (
        <AuthGate client:load>
          <slot />
        </AuthGate>
      ) : (
        <slot />
      )}
    </main>

    <footer class="bg-gray-950 py-4 text-center text-gray-400">
      <p>&copy; 2025 Ant Logistics</p>
    </footer>
  </body>
</html>
