---
import BaseLayout from "@/layouts/BaseLayout.astro";
import LoginForm from "@/components/LoginForm.tsx";
import RedirectIfLoggedIn from "@/components/RedirectIfLoggedIn.tsx";
---

<BaseLayout title="Login" requiresAuth={false}>
  <section class="max-w-3xl mx-auto">
    <RedirectIfLoggedIn client:load />
    <h2 class="text-2xl font-semibold mb-2">Sign in</h2>
    <p class="text-gray-400 mb-6">Access Ant Logistics operator dashboard.</p>
    <div class="rounded-xl border border-gray-800 bg-gray-950/40 p-6">
      <LoginForm client:load />
    </div>
  </section>
</BaseLayout>
