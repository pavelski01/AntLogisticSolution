---
import BaseLayout from "@/layouts/BaseLayout.astro";
import CommodityForm from "@/components/CommodityForm";
---

<BaseLayout title="Ant Logistics - New Commodity">
  <div class="max-w-3xl mx-auto">
    <div class="mb-8 flex items-center justify-between">
      <h1 class="text-3xl font-bold">New Commodity</h1>
      <a href="/commodities" class="text-sm text-purple-400 hover:text-purple-300">Back to list</a>
    </div>

    <div class="bg-gray-800 rounded-xl p-6 shadow-lg">
      <CommodityForm client:load />
    </div>
  </div>
</BaseLayout>
