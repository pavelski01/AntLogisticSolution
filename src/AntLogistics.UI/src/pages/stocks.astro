---
import BaseLayout from "@/layouts/BaseLayout.astro";
import StockList from "@/components/StockList";
---

<BaseLayout title="Ant Logistics - Stock">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8">
      <div
        class="w-full h-48 sm:h-64 md:h-80 lg:h-96 rounded-xl shadow-lg mb-6 overflow-hidden bg-gray-100"
      >
        <img
          src="/images/ant_logistic3.jpg"
          alt="Stock Management"
          class="w-full h-full object-contain"
        />
      </div>
      <div class="flex items-center justify-between gap-4">
        <h1 class="text-4xl font-bold">Stock</h1>
        <a
          href="/stocks/newStock"
          class="inline-flex items-center rounded-lg bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 font-medium transition-colors"
        >
          New stock
        </a>
      </div>
    </div>
    <StockList client:load />
  </div>
</BaseLayout>
